---
import { Image } from 'astro:assets'

const { src, alt, class: className = 'mx-auto w-full max-w-full rounded-lg' } = Astro.props

const isImageMetadata = typeof src !== 'string'
---

{
  isImageMetadata ? (
    <Image src={src} alt={alt} class={className} />
  ) : (
    <img src={src} alt={alt} class={className} />
  )
}
